<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Calculator - Gem TD Hero Changer</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/progress.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-background">
    <!-- Header -->
    <header class="border-b">
        <div class="container">
            <div class="header-content">
                <div class="header-left">
                    <a href="/" class="logo" style="text-decoration: none;">
                        <i data-lucide="house"></i>
                    </a>
                    <a href="/" class="nav-link" style="text-decoration: none; color: var(--foreground); margin-left: 2rem;">Gem TD Hero Changer</a>
                    <a href="/progress" class="nav-link" style="text-decoration: none; color: var(--foreground); margin-left: 2rem;">Progress Calculator</a>
                </div>
                <div class="header-actions">
                    <a href='https://ko-fi.com/Z8Z3195OPM' target='_blank'><img height='36' style='border:0px;height:36px;' src='https://storage.ko-fi.com/cdn/kofi5.png?v=6' border='0' alt='Buy Me a Coffee at ko-fi.com' /></a>
                </div>
            </div>
        </div>
    </header>

    <!-- Calculator Section -->
    <section class="hero">
        <div class="container">
            <h1>Forecasting Progress?</h1>
            <div class="input-container calculator-inputs">
                <div class="input-group">
                    <label for="currentWave">Current Wave</label>
                    <input type="number" id="currentWave" placeholder="Enter Current Wave" class="input" min="1" value="1">
                </div>
                <div class="input-group">
                    <label for="currentProgress">Current Progress</label>
                    <input type="number" id="currentProgress" placeholder="Enter Current Percentage" class="input" min="0" max="100" value="50">
                </div>
                <div class="input-group">
                    <label for="currentMobCount">Current Mob Count</label>
                    <input type="number" id="currentMobCount" placeholder="Enter Current Mob Count" class="input" min="0" value="10">
                </div>
                <div class="input-group">
                    <label for="currentKill">Current Kills</label>
                    <input type="number" id="currentKill" placeholder="Enter Current Kill" class="input" min="0" value="0">
                </div>
                <div class="button-group">
                    <button id="calculateBtn" class="button">Calculate</button>
                </div>
                <p id="error" class="error"></p>
            </div>
        </div>
    </section>

    <!-- Results Section -->
    <section id="results" class="features hidden">
        <div class="container">
            <div class="features-header">
                <button id="floatingBackBtn" class="floating-back-btn hidden">
                    <i data-lucide="arrow-down"></i>
                </button>
                <h2>Calculation Results</h2>
            </div>
            <div class="results-table">
                <table id="progressTable">
                    <thead>
                        <tr>
                            <th>Wave</th>
                            <th>Max Progress (End)</th>
                            <th>Mob Count (End)</th>
                            <th>Total Kills</th>
                        </tr>
                    </thead>
                    <tbody id="progressTableBody">
                        <!-- Results will be dynamically inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="logo">
                    <i data-lucide="gamepad-2"></i>
                    <span>Gem TD Hero Changer</span>
                </div>
                <p>Â© <%= new Date().getFullYear() %> Gravity. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/progress.js"></script>
</body>
</html>