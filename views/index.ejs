<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gem TD Hero Changer</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-background">
    <!-- Header -->
    <header class="border-b">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo" style="text-decoration: none;">
                    <i data-lucide="gamepad-2"></i>
                    <span>Gem TD Hero Changer</span>
                </a>
                <div class="header-actions">
                    <a href='https://ko-fi.com/Z8Z3195OPM' target='_blank'><img height='36' style='border:0px;height:36px;' src='https://storage.ko-fi.com/cdn/kofi5.png?v=6' border='0' alt='Buy Me a Coffee at ko-fi.com' /></a>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <h1>Who are you playing with?</h1>
            <div class="input-container">
                <input type="text" id="steamId" placeholder="Enter their Steam/Dota ID" class="input">
                <div class="button-group">
                    <button id="submitBtn" class="button">Submit</button>
                </div>
                <p id="error" class="error"></p>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features hidden">
        <div class="container">
            <div class="features-header">
                <button id="floatingBackBtn" class="floating-back-btn hidden">
                    <i data-lucide="arrow-down"></i>
                </button>
                <img id="headerImage" src="">
                <h2 id="featuresTitle">Hero Information</h2>
            </div>
            <div id="heroCards" class="cards">
                <!-- Hero cards will be dynamically inserted here -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="logo">
                    <i data-lucide="gamepad-2"></i>
                    <span>Gem TD Hero Changer</span>
                </div>
                <p>Â© <%= new Date().getFullYear() %> Gravity. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>